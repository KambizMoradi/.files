#################################### EXTERNAL KEYBOARD

# browser for external keyboard
XF86HomePage
    brave

# Music Player
XF86Tools
    quodlibet

XF86AudioPlay
    quodlibet --play-pause

XF86AudioNext
    quodlibet --next

XF86AudioPrev
    quodlibet --previous

XF86AudioStop
    quodlibet --stop

# Volume Control
XF86AudioRaiseVolume
    amixer -c 1 set Master 4+

XF86AudioLowerVolume
    amixer -c 1 set Master 4-

